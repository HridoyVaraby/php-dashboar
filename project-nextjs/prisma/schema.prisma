// News Platform Database Schema
// Migrated from Supabase to PostgreSQL with Prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Enums
enum UserRole {
  ADMIN
  EDITOR
  READER
}

enum PostStatus {
  PUBLISHED
  DRAFT
}

// Models
model Profile {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  fullName   String   @map("full_name")
  email      String   @unique
  password   String
  avatarUrl  String?  @map("avatar_url")
  role       UserRole @default(READER)
  isSuspended Boolean @default(false) @map("is_suspended")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  posts     Post[]
  videos    Video[]
  opinions  Opinion[]
  comments  Comment[]

  @@map("profiles")
}

model Category {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  posts         Post[]
  postsManyToMany Post[] @relation("PostCategories")
  subcategories Subcategory[]

  @@map("categories")
}

model Subcategory {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  parentCategoryId String   @map("parent_category_id") @db.Uuid
  name             String
  slug             String   @unique
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  category Category @relation(fields: [parentCategoryId], references: [id], onDelete: Cascade)
  posts    Post[]

  @@index([parentCategoryId])
  @@map("subcategories")
}

model Tag {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  postTags PostTag[]

  @@map("tags")
}

model Post {
  id             String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title          String
  subtitle       String?
  content        String     @db.Text
  excerpt        String?    @db.Text
  featuredImage  String?    @map("featured_image")
  categoryId     String     @map("category_id") @db.Uuid
  subcategoryId  String?    @map("subcategory_id") @db.Uuid
  authorId       String     @map("author_id") @db.Uuid
  status         PostStatus @default(PUBLISHED)
  isFeatured     Boolean    @default(false) @map("is_featured")
  featuredPosition Int?     @map("featured_position")
  viewCount      Int        @default(0) @map("view_count")

  publishedAt    DateTime   @default(now()) @map("published_at")
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")

  // Relations
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  categories  Category[]   @relation("PostCategories")
  subcategory Subcategory? @relation(fields: [subcategoryId], references: [id], onDelete: SetNull)
  author      Profile      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  postTags    PostTag[]
  comments    Comment[]

  @@index([categoryId])
  @@index([authorId])
  @@index([status])
  @@index([publishedAt(sort: Desc)])
  @@index([isFeatured])
  @@map("posts")
}

model PostTag {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  postId    String   @map("post_id") @db.Uuid
  tagId     String   @map("tag_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([postId, tagId])
  @@map("post_tags")
}

model Video {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  description String?  @db.Text
  videoUrl    String   @map("video_url")
  thumbnail   String?
  featuredPosition Int? @map("featured_position")
  authorId    String   @map("author_id") @db.Uuid
  viewCount   Int      @default(0) @map("view_count")
  publishedAt DateTime @default(now()) @map("published_at")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  author Profile @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
  @@map("videos")
}

model Opinion {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  excerpt     String?  @db.Text
  content     String   @db.Text
  authorName  String   @map("author_name")
  authorRole  String?  @map("author_role")
  authorImage String?  @map("author_image")
  createdBy   String?  @map("created_by") @db.Uuid
  publishedAt DateTime @default(now()) @map("published_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  creator Profile? @relation(fields: [createdBy], references: [id], onDelete: SetNull)

  @@map("opinions")
}

model Comment {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  postId     String   @map("post_id") @db.Uuid
  userId     String   @map("user_id") @db.Uuid
  parentId   String?  @map("parent_id") @db.Uuid
  content    String   @db.Text
  isApproved Boolean  @default(false) @map("is_approved")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  post    Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user    Profile   @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentReplies")

  @@index([postId])
  @@index([userId])
  @@index([isApproved])
  @@map("comments")
}

model NewsletterSubscriber {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("newsletter_subscribers")
}

model Advertisement {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title     String
  imageUrl  String   @map("image_url")
  linkUrl   String   @map("link_url")
  location  String
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("advertisements")
}

model SiteSettings {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  siteName        String   @default("NewsViewBD") @map("site_name")
  siteDescription String   @default("বাংলাদেশের অগ্রণী সংবাদ পোর্টাল") @map("site_description")
  siteUrl         String   @default("https://newsviewbd.com") @map("site_url")
  logoUrl         String   @default("/logo.svg") @map("logo_url")
  faviconUrl      String   @default("/favicon.ico") @map("favicon_url")
  contactEmail    String   @default("contact@newsviewbd.com") @map("contact_email")
  socialFacebook  String   @default("") @map("social_facebook")
  socialTwitter   String   @default("") @map("social_twitter")
  socialYoutube   String   @default("") @map("social_youtube")
  enableComments  Boolean  @default(true) @map("enable_comments")
  enableNewsletter Boolean @default(true) @map("enable_newsletter")
  maintenanceMode Boolean  @default(false) @map("maintenance_mode")
  postsPerPage    Int      @default(10) @map("posts_per_page")
  enableAds       Boolean  @default(true) @map("enable_ads")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("site_settings")
}

